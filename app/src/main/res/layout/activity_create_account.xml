<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_account"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.rosstox26.pathos.projectpathos.CreateAccount">

    <TextView
        android:text="Create Account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewCreateAccount"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <TextView
        android:text="Email:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:id="@+id/textViewEmailLabel"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:layout_below="@+id/textViewCreateAccount"
        android:layout_toLeftOf="@+id/textViewCreateAccount"
        android:layout_toStartOf="@+id/textViewCreateAccount" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editTextCreateAccountEmail"
        android:layout_alignBaseline="@+id/textViewEmailLabel"
        android:layout_alignBottom="@+id/textViewEmailLabel"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="28dp"
        android:layout_marginEnd="28dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_marginTop="17dp"
        android:id="@+id/editTextCreateAccountPassword"
        android:layout_below="@+id/editTextCreateAccountEmail"
        android:layout_alignLeft="@+id/editTextCreateAccountEmail"
        android:layout_alignStart="@+id/editTextCreateAccountEmail" />

    <TextView
        android:text="Password:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewPasswordLabel"
        android:layout_alignBottom="@+id/editTextCreateAccountPassword"
        android:layout_alignLeft="@+id/textViewEmailLabel"
        android:layout_alignStart="@+id/textViewEmailLabel" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioButtonMale"
        android:layout_below="@+id/editTextCreateAccountPassword"
        android:layout_toRightOf="@+id/textViewPasswordLabel"
        android:layout_toEndOf="@+id/textViewPasswordLabel"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="39dp" />

    <TextView
        android:text="Male"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewMaleLabel"
        android:layout_below="@+id/radioButtonMale"
        android:layout_alignRight="@+id/radioButtonMale"
        android:layout_alignEnd="@+id/radioButtonMale" />

    <TextView
        android:text="Other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewOtherLabel"
        android:layout_below="@+id/radioButtonOther"
        android:layout_alignLeft="@+id/radioButtonOther"
        android:layout_alignStart="@+id/radioButtonOther" />

    <TextView
        android:text="Female"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewFemaleLabel"
        android:layout_below="@+id/radioButtonFemale"
        android:layout_centerHorizontal="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioButtonFemale"
        android:layout_alignBaseline="@+id/radioButtonMale"
        android:layout_alignBottom="@+id/radioButtonMale"
        android:layout_centerHorizontal="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioButtonOther"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp"
        android:layout_above="@+id/textViewFemaleLabel"
        android:layout_alignRight="@+id/textViewCreateAccount"
        android:layout_alignEnd="@+id/textViewCreateAccount" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Weight (lbs)"
        android:ems="10"
        android:layout_below="@+id/textViewMaleLabel"
        android:layout_toRightOf="@+id/textViewEmailLabel"
        android:layout_toEndOf="@+id/textViewEmailLabel"
        android:layout_marginTop="26dp"
        android:id="@+id/editTextCreateAccountWeight" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Height (ft)"
        android:ems="10"
        android:id="@+id/editTextCreateAccountHeightFt"
        android:layout_below="@+id/editTextCreateAccountWeight"
        android:layout_alignRight="@+id/textViewCreateAccount"
        android:layout_alignEnd="@+id/textViewCreateAccount"
        android:layout_marginTop="11dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Height (in)"
        android:ems="10"
        android:layout_below="@+id/editTextCreateAccountHeightFt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:id="@+id/editTextCreateAccountHeightIn" />

    <Button
        android:text="Create Account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/buttonCreateAccount" />

</RelativeLayout>
